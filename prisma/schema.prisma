generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Model {
  id          Int      @id @default(autoincrement())
  name        String
  type        String
  description String?
  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt

  @@map("models")
}

model Dataset {
  id         String   @id @default(cuid())
  name       String
  type       String
  path       String
  size       Int
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@map("datasets")
}

model EvaluationTask {
  id         String   @id @default(cuid())
  model_id   String
  dataset_id String
  status     String
  config     Json?
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@map("evaluation_tasks")
}

model EvaluationResult {
  id         String   @id @default(cuid())
  task_id    String   @unique
  metrics    Json
  details    Json?
  created_at DateTime @default(now())

  @@map("evaluation_results")
}

model User {
  id          Int      @id @default(autoincrement())
  username    String   @unique
  email       String   @unique
  passwordHash String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model LanguageModelRank {
  id            Int      @id @default(autoincrement())  // 唯一标识
  model_name    String   // 模型名称
  overall_score Float    // 综合评分
  aspect_scores Json     // 各方面的评分（JSON 格式）
  updated_at    DateTime @updatedAt // 更新时间

  @@map("language_models_rank") // 数据库表名称
}

model MultimodalModelRank {
  id            Int      @id @default(autoincrement())  // 唯一标识
  model_name    String   // 模型名称
  overall_score Float    // 综合评分
  aspect_scores Json     // 各方面的评分（JSON 格式）
  updated_at    DateTime @updatedAt // 更新时间

  @@map("multimodal_models_rank") // 数据库表名称
}
